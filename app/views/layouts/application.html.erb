<!DOCTYPE html>
<html>
  <head>
    <title>Stranger Rails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
           <%= link_to "Stranger Rails", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li> <%= link_to "Episodes", episodes_path %> </li>
          <li> <%= link_to "Plotlines", plotlines_path %> </li>
          <li> <%= link_to "Scenes", scenes_path %> </li>
          <li> <%= link_to "Reviews", reviews_path %> </li>

        </ul>
      </div>
    </nav>
    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-info">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
