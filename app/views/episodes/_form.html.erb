<%= render 'layouts/errors', object: @episode %>

<%= form_for @episode do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :season, class: "control-label" %>
    <%= f.number_field :season, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :number, class: "control-label" %>
    <%= f.number_field :number, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "control-label" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rating, class: "control-label" %>
    <%= f.number_field :rating, class: "form-control" %>
  </div>
  <%= f.submit class: "btn" %>
<% end %>
